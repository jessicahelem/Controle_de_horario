<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityRegistraAula">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dias_da_semena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Dia da aula"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <CalendarView
        android:id="@+id/calendario"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp">

    </CalendarView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/edit_hora_inicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Horário de início da aula"
            android:inputType="datetime"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_hora_fim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horário de fim da aula"
            android:inputType="datetime"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            />

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turma"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#000"
        />
    <Spinner
        android:id="@+id/spinner_turma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp">

    </Spinner>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:layout_margin="20dp"
        android:layout_weight="0"
        >

        <EditText
            android:id="@+id/edit_descricao"
            android:layout_width="match_parent"
            android:hint="Descrição"
            android:inputType="text"
            android:layout_height="250dp"
            android:layout_weight="0"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_salva_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_margin="20dp"
        android:onClick="btn_salvar_horario"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"></Button>


</LinearLayout>
</ScrollView>