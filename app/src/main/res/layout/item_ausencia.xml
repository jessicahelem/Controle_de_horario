<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_margin="8dp"
    app:cardCornerRadius="2dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_data"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="italic"
            android:text="Data:" />

        <TextView
            android:id="@+id/input_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="16sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HorÃ¡rio:"
            android:visibility="visible"
            android:textSize="16sp"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/input_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:text=""
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_turma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turma:"
                android:visibility="visible"
                android:textSize="16sp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/input_turma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/edit_justificativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Justificativa:"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            />
            <TextView
                android:id="@+id/input_justificativa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
            />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>