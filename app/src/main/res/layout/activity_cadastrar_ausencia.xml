<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cadastrarAusencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:layout_weight="0"
            >

            <EditText
                android:id="@+id/edt_justificativa"
                android:layout_width="match_parent"
                android:hint="Justificativa"
                android:inputType="text"
                android:layout_height="100dp"
                android:layout_weight="0"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:layout_weight="0">

            <EditText
                android:id="@+id/edt_data"
                android:layout_width="match_parent"
                android:hint="Dia da falta"
                android:inputType="date"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:layout_weight="0">

            <EditText
                android:id="@+id/edt_data_declaracao"
                android:layout_width="match_parent"
                android:hint="Data da declaração"
                android:inputType="date"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turma"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            />

        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:layout_weight="0"
            android:hint="Horário">
        <Spinner
            android:id="@+id/spinner_turma"
           android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"

           >
        </Spinner>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            />
        <Spinner
            android:id="@+id/spinner_horario"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            />

    <Spinner
        android:id="@+id/spinner_professor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >

    </Spinner>




        <Button
            android:id="@+id/cadastrar_ausencia_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/botao"
            android:text="Cadastrar"
            android:textColor="#31d100"
            android:textStyle="bold"
            android:layout_weight="0"
            android:layout_marginTop="30dp"
            android:gravity="center"
            />




</LinearLayout>




</ScrollView>