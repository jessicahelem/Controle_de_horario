<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.declararAusencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:layout_margin="20dp"
            android:layout_weight="0"
            >

            <EditText
                android:id="@+id/edit_justificativa"
                android:layout_width="match_parent"
                android:hint="Justificativa"
                android:inputType="text"
                android:layout_height="250dp"
                android:layout_weight="0"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:layout_margin="20dp"
            android:layout_weight="0">

            <EditText
                android:id="@+id/edit_data"
                android:layout_width="match_parent"
                android:hint="Dia da falta"
                android:inputType="date"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:layout_margin="20dp"
            android:layout_weight="0"
            >

            <EditText
                android:id="@+id/edit_hora"
                android:layout_width="match_parent"
                android:hint="HorÃ¡rio da falta "
                android:inputType="time"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                />

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turma"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000"
            />
        <Spinner
            android:id="@+id/spinner_turma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp">

        </Spinner>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausente"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:textColor="#000"
            android:textSize="16sp"/>
        <Switch
            android:id="@+id/switch_ausencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="20dp"
            android:checked="true"
            />
        </LinearLayout>

        <Button
            android:id="@+id/cadastrar_ausencia_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/botao"
            android:text="Cadastrar"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_weight="0"
            android:onClick="cadastrar_ausencia"

            />







    </LinearLayout>





</ScrollView>